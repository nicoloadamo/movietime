<div class="card eventdescription col-4" id="<%= dom_id(event) %>">
  <div class="card-body">
    <p><strong>Name:</strong></p>
    <p class="event-name wrap-text">
      <span class="name-value"><%= event.name %></span>
    </p>
    <img src="<%= asset_path('people3.jpg') %>" alt="house">
      <p><strong>Description:</strong></p>
    <p class="event-description">
      <span class="description-value"><%= event.description %></span>
    </p>
  </div>
</div>
<div class="card eventdetails col-3" id="<%= dom_id(event) %>">
  <div class="card-body">
    <p>
      <strong>Language:</strong>
      <%= event.language %>
    </p>
    <p>
      <strong>Number of guests (max):</strong>
      <%= event.max_registrations %>
    </p>
    <p>
      <strong>Start time:</strong>
      <%= event.start_time %> - <%= event.end_time %>
    </p>
    <p>
      <strong>Movie:</strong>
      <%= event.movie_id %>
    </p>
    <p>
      <strong>Address:</strong>
      <%= event.address %>
      <% event.latitude %>
      <% event.longitude %>
      <div style="max-width: 300px">
        <%= image_tag "zurich-map.png" %>
      </div>
    </p>
  </div>
</div>
<div class="card movieinfo bg-image col-4" style="background-image: url(<%= event.movie.poster_url %>)" id="<%= dom_id(event) %>">
  <div class="card-body">
    <p><%= event.movie.length %> min.</p>
    <p><%= event.movie.rating %></p>
    <p><%= event.movie.title %>
    <br>
     Genre: <%= event.movie.genre %>
     <br> <%= event.movie.overview %>
    </p>
  </div>
</div>


