<div class="cards-event col-lg-3 col-md-4 col-sm-6 col-xs-12 mt-4">
  <%= link_to(event) do %>
    <div class="card-event" style="background-image: url(<%= event.movie.poster_url %>)">

      <div class="card-event-infos">
        <%= image_tag "logo2.png", class: "avatar-large", alt: "avatar-large"%>
        <h2 class="event-title"><strong><%= event.movie.title %>  -  <%= event.language %> </strong></h2>
        <br>

        <h2><strong><%= event.name %></strong></h2>
        <span><%= event.description %></span>



        <div class="card-event-details">
          <span ><i class="fa-regular fa-calendar-clock"></i><%= event.start_time.strftime('%d/%m/%H:%M') %></span>
          <span><i class="fa-solid fa-people-group"></i><%= event.max_registrations %></span>
        </div>
      </div>

    </div>
  <% end %>
</div>
