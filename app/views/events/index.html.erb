<div class="container" id="first">
  <div class="container-fluid">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group events-search">
      <input class="form-control string required events-form" style="margin-bottom: 8px; " type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-warning">
      <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>

  <div class="card-events" id="events">
    <% @events.each do |event| %>

      <%= render "card_event", event: event %>

    <% end %>
  </div>
  <%# Adds map to homepage %>
  <div id="map" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
