<div class=container>
  <%# <p>Find me in app/views/user_events/index.html.erb</p> %>
  <div class="container">
    <h1>These are my future Events:</h1>

    <div class="cards">
      <% @future_events.each do |event| %>
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= event.image_url %>);">
          <h2><%= event.name %></h2>
          <p><%= event.description %></p>
        </div>
      <% end %>
    </div>

    <h1 class="container">These are my past Events:</h1>

    <div class="cards">
      <% @past_events.each do |event| %>
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= event.image_url %>);">
          <h2><%= event.name %></h2>
          <p><%= event.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
