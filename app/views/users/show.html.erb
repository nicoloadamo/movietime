<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header"><%= @user.nickname %></div>

        <div class="card-body">
          <p><%= @user.biography %></p>
          <%= @user.email %>
        </div>

        <div class="card-footer text-muted">
          <div class="float-left">
            <%= link_to "Edit", edit_user_registration_path %>
          </div>
          <div class="float-right">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
