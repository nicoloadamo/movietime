<% if notice %>
  <div class="flash flash-warning alert-info alert-dismissible fade show m-1" role="alert">
    <%= notice %>
    <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
    </a>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-danger alert alert-warning alert-dismissible fade show m-1" role="alert">
    <%= alert %>
    <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
  </div>
<% end %>
