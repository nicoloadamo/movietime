<div class="container form-event my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for([@event, @review]) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :user_id, collection: @users,  label_method: :nickname, value_method: :id, label:"Choose a participant to review" %>
          <%= f.input :rating, collection: 1..5, label: "Leave 🍿🍿🍿🍿🍿 if you had great time together"%>
          <%= f.input :comment, label: "Tell us more about your experience with this participant" %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
