<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Check your requests</h1>
        <div id="requests">
          <% current_user.requests.each do |request| %>
            <div class="card-request">

              <h1 class="profilecard text-center"><%= @user.nickname %></h1>
              <div>
              <a><strong>
                <%= link_to "#{request.event.name}", event_path(request.event) %>
              </strong></a>

              <p>
                <strong>Movie:</strong>
                <%= request.event.movie.title %>
              </p>
              <p>
                <strong>Status:</strong>
                <%= request.status %>
              </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
