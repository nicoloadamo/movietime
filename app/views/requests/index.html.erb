<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
<p style="color: green"><%= notice %></p>

<h1>Requests</h1>

<div id="requests">
  <% @requests.each do |request| %>
    <%= render request %>
    <p>
      <%= link_to "Show this request", request %>
    </p>
  <% end %>
</div>

<%= link_to "New request", new_request_path %>
    </div>
  </div>
</div>
