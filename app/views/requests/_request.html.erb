<% if event.user != current_user %>
  <%= button_to "Apply Now!", user_requests_path(user_id: @event.user, event_id: event) %>
<% else %>
  <% event.pending_requests.each do |request| %>
    <%= request.user.email %>
    <%= button_to 'Accept', accept_user_request_path(request) %>
    <%= button_to 'Decline', reject_user_request_path(request) %>
    <br>
  <% end %>
<% end %>
